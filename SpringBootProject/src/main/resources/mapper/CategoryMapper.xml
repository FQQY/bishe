<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootproject.dao.CategoryMapper">

  <resultMap id="BaseResultMap" type="com.example.springbootproject.entity.Category">
    <id column="cat_id" jdbcType="INTEGER" property="catId" />
    <result column="cat_name" jdbcType="VARCHAR" property="catName" />
    <result column="del_flag" jdbcType="CHAR" property="delFlag" />
  </resultMap>


  <sql id="Base_Column_List">
    cat_id, cat_name, del_flag
  </sql>

  <select id="selectAllCategory" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from category
  </select>

  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from category
    where cat_id = #{catId,jdbcType=INTEGER}
  </select>

  <insert id="insertSelective" parameterType="java.lang.String">
    insert into category (cat_name)
    values (#{catName,jdbcType=VARCHAR})
  </insert>

  <update id="updateByPrimaryKeySelective" parameterType="java.lang.Integer">
    update category
    set
        cat_name = #{catName,jdbcType=VARCHAR}
    where cat_id = #{catId,jdbcType=INTEGER}
  </update>

<!--  逻辑删除 -->
  <update id="deleleByPrimaryKey" parameterType="java.lang.Integer">
    update category
    set del_flag = 1
    where cat_id = #{catId,jdbcType=INTEGER}
  </update>
</mapper>